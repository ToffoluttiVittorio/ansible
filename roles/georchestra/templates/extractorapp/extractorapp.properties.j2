language=fr

# Email properties
smtpHost=localhost
smtpPort=25
replyTo={{ console_adminemail }}
from={{ console_adminemail }}
emailHtml=false

privileged_admin_name={{ geoserver.privileged.user }}
privileged_admin_pass={{ geoserver.privileged.pass }}

# Link to DB to store extraction statistics in 'extractorapp' schema
jdbcurl=jdbc:postgresql://localhost:5432/{{ georchestra.db.name }}?user={{ georchestra.db.user }}&password={{ georchestra.db.pass }}

# max extraction size in pixels
maxCoverageExtractionSize=99999999
maxExtractions=100
remoteReproject=true
useCommandLineGDAL=false
extractionFolderPrefix=extraction-
emailfactory=org.georchestra.extractorapp.ws.EmailFactoryDefault
emailsubject=[geOrchestra] Your extraction request

# extractionManager bean
minThreads=1
